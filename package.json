{
  "name": "website-template",
  "version": "0.0.1",
  "description": "Basic template for full-stack web development",
  "scripts": {
    "start": "ts-node build.ts dev",
    "postinstall": "npm run install:client && npm run install:server",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "clean": "ts-node build.ts clean",
    "build": "ts-node build.ts prod",
    "build:dev": "ts-node build.ts build-dev",
    "check": "npm run check:client && npm run check:server && npm run check:style",
    "check:ci": "npm run check:client && npm run check:server && npm run check:style-ci",
    "check:client": "tsc --project ./client --noemit",
    "check:server": "tsc --project ./server --noemit",
    "check:style": "eslint .",
    "check:style-ci": "eslint --output-file eslint_report.json --format json .",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run clean && npm run build:dev && npm run typeorm migration:generate -- --name",
    "migration:create": "npm run typeorm migration:create -- --name",
    "migration:run": "npm run typeorm migration:run"
  },
  "author": "Lo√Øck Jeanneret",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.13",
    "@types/react-dom": "^17.0.8",
    "@types/react-router-dom": "^5.1.7",
    "@types/tsc-watch": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "esbuild": "^0.12.14",
    "esbuild-plugin-sass": "^0.5.0",
    "eslint": "^7.30.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fs-extra": "^10.0.0",
    "sqlite3": "^5.0.2",
    "ts-node": "^10.1.0",
    "tsc-watch": "^4.4.0",
    "typescript": "^4.3.5"
  }
}